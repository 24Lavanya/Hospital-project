    <body>
        <section>
            <div class="form-box">
                <div class="form-value">
                <h2>Login</h2>
                <div class="alert-container">
                <% if (error.length>0) { %>
                    <div class="alert alert-danger alert-dismissal ">
                        <strong><%= error %></strong>
                      </div>
                    <% } %>
                </div>
                        <form id="loginForm" action="/login" method="post">
                        <center><div class="inputbox">
                            <ion-icon name="mail-outline"></ion-icon>
                            <input type="text" id="username" name="username" placeholder="Username" required>
                        </div></center>
                        
                    <center><div class="inputbox">
                            <ion-icon name="lock-closed-outline"></ion-icon>
                            <input type="password" name="password" placeholder="Password"  required>
                        </div>
                            <!-- <label for="usedBy">Select role:</label>
                            <select name="usedBy" id="used">
                                <option value="doctor">doctor</option>
                                <option value="admin">admin</option>
                                <option value="user">user</option>
                            </select> -->
                        </center>
                        <br><br>
                        <input type="submit" class="button" value="Log in"><br><br>
                        <div class ="sign up">
                        <p align="center">Don't have an account <a href="/register">Sign Up</a></p>
                        </div>
                    </form>
                </div>
                </div>
            </div>
        </section>
