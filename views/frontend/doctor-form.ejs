<%-include('common/head.ejs')-%>
<title>Hospital Management System</title>
</head>
<body>
<div id="container">
  
    <%-include('common/sidebar.ejs')-%>
  <div id="content">
    <%-include('common/welcome.js')  %>

    <button class="btn" id="doc">
      <a href="/admin/doctor" >

          Doctors
      </a>
    </button>
    <button class="btn" id="add-doc" >
        <a href="/admin/add-doctor" >
            Add doctor
        </a>
    </button>
    <form id="addDoctorForm" action="/admin/add-doctor" method="post">
      <h2 align="center">Doctors' Details</h2>
      <table align="center">
        <tr>
          <td><label>Name:</label></td>
          <td>
            <input
              type="text"
              id="doctorName"
              name="doctorName"
              placeholder="Enter your name"
              required
            /><br />
          </td>
        </tr>
        <tr>
          <td><label>Mobile No:</label></td>
          <td><input
              type="text"
              name="Mobile"
              size="10"
              pattern="[0-9]{10}"
            />
          </td>
        </tr>
        <tr>
          <td><label>Birth Date:</label></td>
          <td>
            <input
              type="date"
              name="dob"
              id="dob"
              placeholder="dd/mm/yyyy"
              required
            />
          </td>
        </tr>
        <tr>
          <td><label>Top doctor</label></td>
          <td><input type="checkbox" name="istop" ></td>
        </tr>
        <tr>
          <td><label>Experience</label></td>
          <td><input type="number" name="exp" ></td>
        </tr>
        <tr>
          <td><label>Gender:</label></td>
          <td>
            <label for="male">Male
            <input type="radio" id="male" name="gender" value="male" required>
          </label>
            <label for="female">Female
            <input type="radio" id="female" name="gender" value="female" required>
          </label></td>
        </tr>
        <tr>
          <td><label>Department:</label></td>
          <td>
            <select name="dept">
              <option>Cardiology</option>
              <option>Dermatology</option>
              <option>Gynaecology</option>
              <option>Neurology</option>
              <option>Opthalmology</option>
              <option>Orthopedics</option>
              <option>Pediatrics</option>
              <option>Physiotherapy</option>
            </select>
          </td>
        </tr>
        <tr>
          <td><label>Email:</label></td>
          <td>
            <input
              type="email"
              name="email"
              placeholder="Enter Your Email"
            /><br />
          </td>
        </tr>
        <tr>
          <td><label>Address:</label></td>
          <td>
            <textarea
              name="address"
              rows="3"
              cols="30"
              placeholder="Enter your address"
            ></textarea>
          </td>
        </tr>
        <tr>
          <td></td>
          <td>
            <input type="submit" value="Add doctor" />
          </td>
        </tr>
      </table>
    </form>
    <br />
