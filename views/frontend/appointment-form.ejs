<%-include('common/head.ejs')-%>
<title>Hospital Management System</title>
</head>
<body>
<div id="container">
  
    <%-include('common/sidebar.ejs')-%>
  <div id="content">
    <%-include('common/welcome.js')  %>

    <button class="btn" id="appo">
      <a href="/admin/appointment" >

          Appointment
      </a>
    </button>
    <button class="btn" id="add-appo" >
        <a href="/admin/add-appointment" >
            Add appointment
        </a>
    </button>
    <button class="btn" id="appr-appo" >
      <a href="/admin/appointment/approved" >
          Approved appointments
      </a>
  </button>
    <form id="addAppoForm" action="/admin/add-appointment" method="post">
      <h2 align="center">Appointment Details</h2>
      <table>
        <tr>
          <td><label for="patientName">Patient Name</label></td>
          <td><input type="text" id="patientName" name="patientName" required></td>
        </tr>
        <tr>
          <td><label for="doctorname">Doctor Name</label></td>
          <td><input type="text" id="doctorname" name="doctorname" required></td>
        </tr>
        <tr>
          <td><label for="age">Age</label></td>
          <td><input type="number" id="age" name="age" required></td>
        </tr>
        <tr>
          <td><label for="phone">Phone Number</label></td>
          <td><input type="number" id="phone" name="phone" required></td>
        </tr>
        <tr>
          <td><label for="date">Preferred Date</label></td>
          <td><input type="date" id="date" name="date" required></td>
        </tr>
        <tr>
          <td><label for="time">Preferred Time</label></td>
          <td><input type="time" id="time" name="time" required></td>
        </tr>
        <tr>
          <td><label for="cause">Cause</label></td>
          <td><textarea id="cause" name="cause" rows="4"></textarea></td>
        </tr>
        <tr>
          <td></td>
          <td>
            <input type="submit" value="Book appointment" />
          </td>
        </tr>
      </table>
    
    </form>
    <br />
