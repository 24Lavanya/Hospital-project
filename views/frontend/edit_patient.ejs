<%-include('common/head.ejs')-%>
<title>Hospital Management System</title>
</head>
<body>
<div id="container">
  
    <%-include('common/sidebar.ejs')-%>
  <div id="content">
    <h1>Admin</h1>

    

    <form id="addPatientForm" action="/admin/patient/edit/<%= patient._id %>" method="post">
        <h2 align="center">Edit Patient</h2>
        <table align="center">
          <tr>
            <td>
              <label>Patient Name:</label>
            </td>
            <td>
              <input
                type="text"
                id="patientName"
                name="patientName"
                value="<%=patient.patientname  %>"
                required
              />
              
            </td>
          </tr>
          <tr>
            <td>
              <label for="bloodGroup">Blood Group:</label>
            </td>
            <td>
              <select id="bloodGroup" name="bloodGroup" value="<%=patient.bloodGroup  %>" required>
                <option value="A+">A+</option>
                <option value="A-">A-</option>
                <option value="B+">B+</option>
                <option value="B-">B-</option>
                <option value="AB+">AB+</option>
                <option value="AB-">AB-</option>
                <option value="O+">O+</option>
                <option value="O-">O-</option></select
              ><br />
            </td>
          </tr>
          <tr>
            <td>
              <label for="dob">Date of Birth:</label>
            </td>
            <td>
              <input type="date" id="dob" name="dob" value="<%=patient.dob  %>"required />
            </td>
          </tr>
          <tr>
            <td>
              <label for="phone-no">Phone no:</label>
            </td>
            <td>
              <input
                type="tel"
                id="contactNumber"
                name="contactNumber"
                pattern="[0-9]{10}"
                placeholder="1234567890"
                value="<%=patient.phoneNo  %>"
                required
              />
            </td>
          </tr>
          <tr>
            <td>
              <label for="email">Email:</label>
            </td>
            <td>
              <input
                type="email"
                id="email"
                name="email"
                value="<%=patient.email  %>"
                required
              />
            </td>
          </tr>
          <tr>
            <td>
              <label for="gender">Gender:</label>
            </td>
            <td>
                <input type="radio" id="male" name="gender" value="male" <%= patient.gender === 'male' ? 'checked' : '' %> required>
                <label for="male">Male</label>
                
                <input type="radio" id="female" name="gender" value="female" <%= patient.gender === 'female' ? 'checked' : '' %> required>
                <label for="female">Female</label>
            </td>
          </tr>
          <tr>
            <td>
              <label for="address">Address:</label>
            </td>
            <td>
              <textarea
                id="address"
                name="address"
                rows="4"
                required
              ><%=patient.address  %></textarea>
            </td>
          </tr>
          <tr>
              <td></td>
              <td>
                <button type="submit" class="btn">Update patient</button>
                <input type="reset" value="Reset" />
              </td>
            </tr>
        </table>

        
      </form>